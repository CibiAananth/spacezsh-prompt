#!/usr/bin/env zsh
# vim: ft=zsh fdm=marker foldlevel=0 sw=2 ts=2 sts=2 et

# Enables terminal application mode and updates editor information.
function ss::vi-mode-line-init {
  # prezto/modules/completion
  # The terminal must be in application mode when ZLE is active for $terminfo
  # values to be valid.
  if (( $+terminfo[smkx] )); then
    # Enable terminal application mode.
    echoti smkx
  fi

  # Rer-ender prompt to get vi mode updated
  ss::refresh_cache_item "char" "true"

  if [[ $SPACESHIP_VI_MODE_CURSOR == true ]]; then
    # Update cursor style
    case "$KEYMAP" in
      vicmd|visual|vline)
        ss::set_cursor_style ${(s. .)SPACESHIP_VI_MODE_CURSOR_NORMAL}
        ;;
      main|viins|*)
        ss::set_cursor_style ${(s. .)SPACESHIP_VI_MODE_CURSOR_INSERT}
        ;;
    esac
  fi
}

ss::vi-mode-line-init "$@"
